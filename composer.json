{
    "name": "eminos/statamic-group",
    "type": "statamic-addon",
    "description": "A Statamic addon that adds a Group fieldtype that allows you to group multiple fields.",
    "license": "MIT",
    "require": {
        "statamic/cms": "^3.0||^4.0"
    },
    "require-dev": {
        "php": "^8.1",
        "laravel/framework": "^10.8",
        "statamic/cms": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Eminos\\StatamicGroup\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Group",
            "description": "A Statamic addon that adds a Group fieldtype that allows you to group multiple fields."
        },
        "laravel": {
            "providers": [
                "Eminos\\StatamicGroup\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
